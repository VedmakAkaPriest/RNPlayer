{
  "transitions": [
    {
      "name": "showDownloads",
      "to": "DownloadsList",
      "actions": {
        "fs.createIfNotExists": "${__dirs.DocumentDir}/downloads",
        "fs.list": "${__dirs.DocumentDir}/downloads",
        "map": "file"
      }
    },
    {
      "name": "openFile",
      "from": "DownloadsList",
      "to": "Player",
      "actions": {
        "player.open": {
          "title": "${title}",
          "path": "${link}"
        }
      }
    }
  ],
  "states": [
    {
      "name": "DownloadsList",
      "screen": "SimpleListView",
      "model": "file"
    },
    {
      "name": "Player",
      "screen": "VideoPlayerView",
      "model": "playlist"
    }
  ],
  "init": "showDownloads"
}
